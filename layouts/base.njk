<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{title}}</title>
    <link rel="stylesheet" href="../bootstrap.css">
  </head>
  <body class="bg-danger">
    
    <nav class="navbar navbar-expand-lg navbar-light bg-dark" id="fullNav">
      <!--<a class="navbar-brand" href="#">Navbar</a>-->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          {% for link in links.pages %}
            <a class="nav-item nav-link text-secondary" href="{{link.url}}">{{link.title}}</a>
          {% endfor %}
        </div>
      </div>
    </nav>
    
    <div class="pos-f-t" id="mobileNav">
      <div class="collapse" id="navbarToggleExternalContent">
        <div class="bg-dark p-4">
          <h5 class="text-muted h4">Look Around</h5>
          <ul>
          {% for link in links.pages %}
            <li><a class="nav-item nav-link text-secondary" href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
          </ul>
        </div>
      </div>
      <nav class="navbar navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </nav>
    </div>
    
    {% block mainContent %}
    <main>
      <header class="text-center"><h1>{{description}}</h1></header>
      <section>
        <div class="container"><div class="row"><div class="col">
          {{contents | safe}}
        </div></div></div>
      </section>
    </main>
    {% endblock %}
    
    <script src="../jquery-3.3.1.min.js"></script>
    <script src="../bootstrap.bundle.js" ></script>
  </body>
</html>
